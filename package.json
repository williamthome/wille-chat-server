{
  "name": "multiplayer-game-server",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "dev": "npm run build && ts-node-dev --respawn --transpile-only --inspect -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js",
    "update": "npx npm-check-updates -u && npm install",
    "lint": "npx eslint ./src/**/*.{ts} --cache --fix",
    "format": "npx prettier --write ./src/**/*.{ts,json}"
  },
  "author": "William Fank Thom√©",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "@types/node": "^14.14.28",
    "@types/socket.io": "^2.1.13",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "socket.io": "^3.1.1"
  }
}
