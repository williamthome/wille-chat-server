{
  "name": "multiplayer-game-server",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "dev": "npm run build && ts-node-dev --respawn --transpile-only --inspect -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js",
    "update": "npx npm-check-updates -u && npm install",
    "lint": "npx eslint ./src/**/*.{ts} --cache --fix",
    "format": "npx prettier --write ./src/**/*.{ts,json}"
  },
  "author": "William Fank Thom√©",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@types/socket.io": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "socket.io": "^4.6.1"
  }
}
